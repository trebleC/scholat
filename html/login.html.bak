<div class="container">
  <div class="login-box">
    <div class="login-title text-center">
      <h1><small>登录</small></h1>
    </div>
    <div class="login-content ">
      <div class="form" style="width: 343px;margin-left: 400px;">
        <form action="#" method="post">
          <div class="form-group">
            <div class="col-xs-12  ">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                <input type="text" id="username" name="username" class="form-control" placeholder="用户名">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-xs-12  ">
              <div class="input-group">
                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                <input type="password" id="password" name="password" class="form-control" placeholder="密码">
              </div>
              <p> &nbsp&nbsp&nbsp&nbsp<span id="loginResult"></span></p>
            </div>
          </div>
          <div class="form-group foractions">
            <div class="col-sm-offset-1 col-sm-10">
              <div class="radio" id="group" style="margin-left: 80px;">
                <input type="radio" id="group_1", name="group", value="teacher" ><span>老师</span>
                <input type="radio" id="group_2", name="group", value="student" style="margin-left: 9px;"><span style="margin-left: 26px;">学生</span><br>
              </div>
            </div>
          </div>
          <div class="form-group form-actions">
            <div align="center">
              <button type="button" class="btn btn-sm btn-info" id="login">登录</button>
            </div>
          </div>
        </form>
      </div>
